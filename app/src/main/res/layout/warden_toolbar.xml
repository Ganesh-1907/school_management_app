<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="8dp"
    android:elevation="5dp">

    <ImageButton
        android:id="@+id/backButton_warden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back2_button"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/logoImage_warden"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/jmms_logo"
        android:contentDescription="App Logo"
        app:layout_constraintStart_toEndOf="@id/backButton_warden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/designationText_warden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warden"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/Navy_blue"
        app:layout_constraintStart_toEndOf="@id/logoImage_warden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/warden_logo"
        app:layout_constraintStart_toEndOf="@id/designationText_warden"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"/>



    <ImageButton
        android:id="@+id/informationButton_warden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/information_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
