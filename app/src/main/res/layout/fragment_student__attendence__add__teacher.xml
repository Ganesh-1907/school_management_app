<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Student_Attendence_Add_Teacher"
    android:background="@drawable/background1">

   <Spinner
       android:id="@+id/Spinner_month_attendenceentry_teacher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/Spinner_date_attendenceentry_teacher"
       android:layout_marginTop="4dp"
       android:layout_marginEnd="10dp"
       android:background="@drawable/roundededittextnavybluestroke_2"
       app:layout_constraintHorizontal_chainStyle="packed"
       android:layout_marginStart="100dp"

       />
   <Spinner
       android:id="@+id/Spinner_date_attendenceentry_teacher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@id/Spinner_month_attendenceentry_teacher"
       app:layout_constraintEnd_toStartOf="@id/Spinner_year_attendenceentry_teacher"
       android:layout_marginTop="4dp"
       android:layout_marginEnd="10dp"
       android:background="@drawable/roundededittextnavybluestroke_2"
       app:layout_constraintHorizontal_chainStyle="packed"
       />
   <Spinner
       android:id="@+id/Spinner_year_attendenceentry_teacher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/roundededittextnavybluestroke_2"
       app:layout_constraintStart_toEndOf="@id/Spinner_date_attendenceentry_teacher"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_chainStyle="packed"
       android:textSize="19sp"
       android:textStyle="bold"
       android:layout_marginTop="4dp"
       android:layout_marginEnd="5dp"
       tools:ignore="ExtraText" />
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recyclerview_student_attendence_mark_teacher"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      app:layout_constraintTop_toBottomOf="@id/Spinner_month_attendenceentry_teacher"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginTop="80dp"
       android:layout_marginBottom="90dp"
       tools:listitem="@layout/student_attendence_mark_recycleritem"
       />
   <Button
       android:id="@+id/mark_student_attendence_button_teacher"
       android:layout_width="0dp"
       app:layout_constraintWidth_percent="0.6"
       android:layout_height="60dp"
       app:layout_constraintTop_toBottomOf="@id/recyclerview_student_attendence_mark_teacher"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/Deep_Blue"
       android:text="Submit"
       android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>