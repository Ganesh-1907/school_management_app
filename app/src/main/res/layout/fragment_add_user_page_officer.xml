<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Add_User_page_officer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:backgroundTint="@color/white"
                    android:padding="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/adduser_officer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Add New User"
                            android:textColor="@color/Textcolor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <EditText
                            android:id="@+id/Employee_name_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Employee Full Name"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey"
                            android:inputType="textCapWords" />

                        <EditText
                            android:id="@+id/Employee_age_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Date of Birth"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey"
                            android:inputType="date" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp" />

                        <RadioGroup
                            android:id="@+id/Employee_Gender_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:background="@drawable/roundededittext_1"
                            android:padding="10dp">

                            <RadioButton
                                android:id="@+id/Male_radiobutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:id="@+id/Female_radiobutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Female"
                                android:textColor="@color/black" />

                            <RadioButton
                                android:id="@+id/Others_radiobutton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:textColor="@color/black" />
                        </RadioGroup>

                        <Spinner
                            android:id="@+id/Employee_role_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:padding="10dp" />

                        <EditText
                            android:id="@+id/Employee_email_id_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Email ID"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey"
                            android:inputType="textEmailAddress" />

                        <EditText
                            android:id="@+id/Employee_mobile_number_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Mobile Number"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey"
                            android:inputType="phone" />

                        <EditText
                            android:id="@+id/Employee_joining_date_enter_officer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Joining Date"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey"
                            android:inputType="date" />

                        <EditText
                            android:id="@+id/Employee_address_add_officer"
                            android:layout_width="match_parent"
                            android:layout_height="116dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/roundededittext_1"
                            android:hint="Address"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Medium_grey" />

                        <Button
                            android:id="@+id/submit_button"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/Deep_Blue"
                            android:text="Add User"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
